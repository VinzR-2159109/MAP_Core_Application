<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxWidth="380.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.uhasselt.dwi_application.controller.WorkInstruction.Part.PartItemController">

    <children>
        <VBox alignment="CENTER" layoutY="22.0" prefHeight="76.0" prefWidth="430.0" style="-fx-border-color: black; -fx-padding: 10; -fx-background-color: #F0F0F0; -fx-border-radius: 10;" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>

                <!-- Part Name Section -->
                <HBox alignment="CENTER">
                    <children>
                        <StackPane>
                            <children>
                                <Label fx:id="partName_lbl" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="Part Name">
                                    <StackPane.margin>
                                        <Insets />
                                    </StackPane.margin>
                                </Label>
                                <TextField fx:id="partName_txt" alignment="CENTER_RIGHT" promptText="Part Name" visible="false" />
                            </children>
                        </StackPane>

                        <Button fx:id="editSave_btn" mnemonicParsing="false" prefHeight="26.0" prefWidth="137.0" text="Edit">
                     <HBox.margin>
                        <Insets left="10.0" right="22.0" />
                     </HBox.margin></Button>
                  <CheckBox fx:id="partCheckbox" mnemonicParsing="false" />
                    </children>
                </HBox>

                <!-- Bin Number Section -->
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label minWidth="100.0" text="Bin Number:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="binNum_cbx" minWidth="150.0" prefHeight="26.0" prefWidth="126.0" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
