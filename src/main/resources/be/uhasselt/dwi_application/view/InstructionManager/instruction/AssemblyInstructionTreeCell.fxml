<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<HBox spacing="5" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane>
        <Label fx:id="instructionLabel" text="Instruction Description" />
        <TextField fx:id="instructionTextField" managed="false" visible="false" />
    </StackPane>


    <Region HBox.hgrow="ALWAYS" />

    <HBox fx:id="InstructionButtons_hbox" alignment="CENTER_RIGHT" spacing="5.0">
        <Button fx:id="addSubInstruction_btn" text="+" />
        <ComboBox fx:id="addInstructionType_combo" managed="false" prefWidth="150.0" />
        <Button fx:id="deleteInstruction_btn" text="🗑️" />
    </HBox>
</HBox>
