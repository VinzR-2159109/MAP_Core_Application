<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1000.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.uhasselt.dwi_application.controller.MainController">
   <left>
      <VBox fx:id="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="binManager_hbox" alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" onMouseClicked="#onViewClicked" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="BinManager_img" fitHeight="44.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="BinManager_label" text="Bin Manager" />
               </children>
            </HBox>
            <HBox fx:id="InstructionManager_hbox" alignment="CENTER_LEFT" layoutX="10.0" layoutY="110.0" onMouseClicked="#onViewClicked" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="InstructionManager_img" fitHeight="44.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="InstructionManager_label" text="Instruction Manager" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <AnchorPane fx:id="contentPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Separator layoutY="-1.0" orientation="VERTICAL" prefHeight="1002.0" prefWidth="20.0" />
         </children></AnchorPane>
   </center>
</BorderPane>
